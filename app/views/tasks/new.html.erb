<head>
 <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
 <link rel="stylesheet" href="/resources/demos/style.css">
 <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
 <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
 <script type="text/javascript">
 $( function() {
    $( "#datepicker" ).datepicker();
  } );
 </script>
</head>
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h2 class="display-3">Add New Task To List</h2>
  </div>
</div>

<div id="newTaskForm" class="jumbotron">
<form id="form" class="navbar-form navbar-left" action="/tasks/create" method="POST">
  <input type="hidden" name="status" value="ToDo">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token%>">
  <div class="form-group">
   <p>Task: <input type="text" class="form-control" name="task" placeholder="Task.."></p>
   <p>Date: <input type="text" id="datepicker" name="date" placeholder="Choose Date"></p>
  </div>
  <p>
    <button type="submit" class="btn btn-default">Add New Task</button>
    <a href="/tasks"><button class="btn btn-default">Back To Tasks</button></a>
  </p>
</form>
</div>
